---

// IMPORTS ASTRO COMPONENTS
import FooterColumnFour from '@/components/common/footer/column-four/index.astro'
import FooterColumnOne from '@/components/common/footer/column-one/index.astro'
import FooterColumnThree from '@/components/common/footer/column-three/index.astro'
import FooterColumnTwo from '@/components/common/footer/column-two/index.astro'
import SocialIcons from '@/components/common/footer/social-icons/index.astro'

// IMPORTS ASTRO ATOMS
import PictureInternal from '@/atoms/picture/internal/contain/index.astro'

// IMPORTS ASTRO COLLECTION
import { getCollection } from 'astro:content'

// IMPORTS FOOTER COLUMN ONE COLLECTION
let footer_column_one = await getCollection('footer-column-one')
footer_column_one = footer_column_one.sort((a, b) => a.data.order - b.data.order).filter( ( item ) => item.data.live )

// IMPORTS FOOTER COLUMN TWO COLLECTION
let footer_column_two = await getCollection('footer-column-two')
footer_column_two = footer_column_two.sort((a, b) => a.data.order - b.data.order).filter( ( item ) => item.data.live )

// IMPORTS FOOTER COLUMN THREE COLLECTION
let footer_column_three = await getCollection('footer-column-three')
footer_column_three = footer_column_three.sort((a, b) => a.data.order - b.data.order).filter( ( item ) => item.data.live )

// IMPORTS FOOTER COLUMN FOUR COLLECTION
let footer_column_four = await getCollection('footer-column-four')
footer_column_four = footer_column_four.sort((a, b) => a.data.order - b.data.order).filter( ( item ) => item.data.live )

// IMPORTS FOOTER TITLES
import { frontmatter as footerColumnFour } from "@/content/footer-titles/title-four.md"
import { frontmatter as footerColumnOne } from "@/content/footer-titles/title-one.md"
import { frontmatter as footerColumnThree } from "@/content/footer-titles/title-three.md"
import { frontmatter as footerColumnTwo } from "@/content/footer-titles/title-two.md"

---
<footer class="bg-mojo_dark_green py-20 md:py-40 z-50 relative">
    <section class="container px-4 md:px-0 sm:max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg xl:max-w-[1180px] mac:max-w-screen-xl 2xl:max-w-screen-2xl mx-auto">
        <section class="space-y-2">
            <span class="text-white text-lg md:text-xl font-gt_america_light">Ready to get started?</span>
            <div class="flex gap-6 items-center">
                <p class="text-white text-3xl md:text-6xl font-altis">Let’s talk software</p>
                <div class="p-2 md:p-4 bg-white hover:bg-green-600 group rounded-full">
                    <div class="size-3 md:size-5 group-hover:hidden">
                        <PictureInternal
                            alternative_text="black right arrow"
                            source="/icons/black_right_arrow.svg"
                        />
                    </div>
                    <div class="size-5 hidden group-hover:block">
                        <PictureInternal
                            alternative_text="white right arrow"
                            source="/icons/white_right_arrow.svg"
                        />
                    </div>
                </div>
            </div>
            <span class="text-white font-gt_america_light">Check out our ★★★★★ reviews on Clutch.</span>
        </section>
        <section class="py-10 md:py-20 border-b border-white/20">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-10">
                <FooterColumnOne
                    data={ footer_column_one }
                    title={ footerColumnOne.title }
                />
                <FooterColumnTwo
                    data={ footer_column_two }
                    title={ footerColumnTwo.title }
                />
                <FooterColumnThree
                    data={ footer_column_three }
                    title={ footerColumnThree.title }
                />
                <FooterColumnFour
                    data={ footer_column_four }
                    title={ footerColumnFour.title }
                />
            </div>
        </section>
        <section class="flex flex-col-reverse md:flex-row md:items-center justify-between gap-2 md:gap-0 py-6">
            <div class="flex flex-col md:flex-row gap-2 md:gap-4">
                <p class="text-white font-gt_america_light">&copy; { new Date().getFullYear() } MojoTech LLC. All rights reserved.</p>
                <p class="text-white underline font-gt_america_light cursor-pointer">Privacy Policy</p>
            </div>
            <!-- SOCIAL ICONS -->
            <SocialIcons />
        </section>
    </section>
</footer>
